{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "0.2.1",
  "description": "__MSG_appDescription__",
  "default_locale": "en",
  "icons": {
    "16": "assets/images/1481821230_browser-16.png",
    "48": "assets/images/1481821228_browser-48.png",
    "128": "assets/images/1481821197_browser-128.png"
  },
  "action": {
    "default_icon": "assets/images/favicon-72.png",
    "default_title": "My S3 Browser"
  },
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "host_permissions": [
    "https://*.amazonaws.com/*",
    "https://*.googleapis.com/*"
  ],
  "permissions": [
    "storage"
  ]
}
